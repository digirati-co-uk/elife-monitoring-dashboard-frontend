{{id}}
{{> article-detail section=articleDetail }}
<section class="article-version-map col-sm-4 col-md-3">
    <ol class="article-version-map-list">
        {{#each article.versions as |versions|}}
            <li>
                <span class="version">Version {{@key}}</span>
                <ol class="run">
                    {{#each versions.runs as |runs| }}
                        <li data-run="{{run-number}}"  data-version="{{version-number}}">
                            <a href="#">
                                <span>Run {{@key}}</span>
                                <span>{{elFormatUnixDate publication-date "Do MMMM YYYY" }}</span>
                                <span>{{elFormatUnixDate publication-date "HH:mm" }}</span>
                            </a>
                        </li>
                    {{/each}}
                </ol>

            </li>
        {{/each}}
    </ol>
</section>
<section class="article-version-history col-sm-8 col-md-8 col-md-offset-1">
    <ol class="article-version-history-list">
        {{#each currentArticle.events as |events|}}
            <li>
                <div class="column-1">
                    <span class="glyphicon glyphicon-ok {{event-status}} glyphicon-ok--mod pull-left"></span>
                    <span>{{event-type}}</span>
                </div>
                <div class="column-2">
                    <dl>
                        <dt><i>Timestamp:</i></dt>
                        <dd class="divide">{{elFormatUnixDate event-timestamp "MM/DD/YYYY" }}</dd>
                        <dd class="divide">{{elFormatUnixDate event-timestamp "HH:mm" }}</dd>
                    </dl>
                    <dl>
                        <dt><i>Message:</i></dt>
                        <dd>{{event-message}}</dd>
                    </dl>
                </div>
            </li>
        {{/each}}
    </ol>
</section>