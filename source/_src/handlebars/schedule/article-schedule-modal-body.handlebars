{{#is actionType 'schedule'}}
<p>When do you want to schedule this article?</p>
<br/>
<div class="form-group">
    <div class="col-sm-6">
        <input id="" name="" class="form-control datepicker" type="text" placeholder="Date">
    </div>
    <div class="col-sm-2">
        <input id="" name="schedule_hour_submit" class="form-control timepicker hourpicker" type="number" placeholder="Hour">
    </div>
    <div class="col-sm-2">
        <input id="" name="schedule_minute_submit" class="form-control timepicker minutepicker" type="number" placeholder="Minute">
    </div>
    <div class="col-sm-2">
        <select class="form-control timepicker ampmpicker" name="schedule_ampm_submit">
            <option value="am">am</option>
            <option value="pm" selected="selected">pm</option>
        </select>
    </div>
</div>
<br/>
{{/is}}
{{#is actionType 'cancel'}}
<div class="alert alert-warning">
    <p>Are you sure you want to cancel the publication of this article?</p>
</div>
{{/is}}