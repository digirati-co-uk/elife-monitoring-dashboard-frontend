<tr data-article-title="{{ doi }}"
    data-article-id="{{ id }}"
    data-article-version="{{ version }}"
    data-article-run="{{ run-id }}">
    <td class="column-1">
        <a href="/article/{{id}}/{{ version }}/{{ run-id }}" class="hidden-xs">
            <span class="fa fa-file {{#if status}}{{lowercase status }}{{else}}no-article-status-type{{/if}}"></span>
        </a>
        <h6>
            <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{#if doi}}{{ doi }}{{else}}Not yet available ({{id}}){{/if}}</a>
        </h6>
        {{#if title}}
            <p>
                <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{ title }}</a>
            </p>
        {{/if}}
    </td>
    <td class="column-2">
        <dl>
            {{#if version}}
                {{#if doi}}
                    <dt>
                        <a href="/article/{{id}}/{{ version }}/{{ run-id }}"><i>Version:</i></a>
                    </dt>
                    <dd>
                        <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{ version }}</a>
                    </dd>
                {{/if}}
            {{/if}}
            {{#if article-type}}
                <dt>
                    <a href="/article/{{id}}/{{ version }}/{{ run-id }}"><i>Article type:</i></a>
                </dt>
                <dd>
                    <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{ article-type }}</a>
                </dd>
            {{/if}}
            {{#if publication-date}}
                <dt>
                    <a href="/article/{{id}}/{{ version }}/{{ run-id }}"><i>Publication date:</i></a>
                </dt>
                <dd>
                    <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{publication-date}}{{!--{{elFormatUnixDate publication-date "Do MMMM YYYY" }}--}}</a>
                </dd>
            {{/if}}
            {{#if corresponding-authors}}
                <dt>
                    <a href="/article/{{id}}/{{ version }}/{{ run-id }}"><i>Corresponding authors:</i></a>
                </dt>
                <dd>
                    <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{ corresponding-authors }}</a>
                </dd>
            {{/if}}
        </dl>
    </td>
    {{#isnt section 'uir'}}
        <td class="column-3">
            <p>
                <b>
                    {{#if event-type}}
                        <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{ uppercase event-type }}</a>
                    {{/if}}
                    {{#if event-status}}
                        <br/>
                        <a href="/article/{{id}}/{{ version }}/{{ run-id }}">{{ uppercase event-status }}</a>
                    {{/if}}
                </b>
            </p>
        </td>
    {{/isnt}}

    <td class="column-3">
        {{#is section 'uir'}}
            <a href="{{preview-link}}" target="_blank" class="btn btn-default preview">
                <span class="fa fa-eye"></span>
                Preview
            </a>
            <button class="btn btn-default schedule" id="schedule" data-toggle="modal" data-target="#schedule-modal"
                    data-article-id="{{ id }}">
                <span class="fa fa-calendar"></span>
                Schedule
            </button>
            <button class="btn btn-default publish btn-publish" data-toggle="modal" data-target="#publish-modal"
                    type="button">
                <span class="fa fa-globe"></span>
                Publish Now
            </button>
            <div class="checkbox">
                <label>
                    <input type="checkbox" class="toggle-publish-all"> Batch Publishing
                </label>
            </div>
        {{/is}}
        {{#is section 'scheduled'}}
            {{#if scheduled-publication-date}}
                <p><strong><span
                        class="text-uppercase">Scheduled</span><br/>{{elFormatUnixDate scheduled-publication-date "DD/MM/YYYY h:mma" }}
                </strong></p><br/>
                <button class="btn btn-default schedule" id="schedule-amend" data-toggle="modal"
                        data-target="#schedule-modal"
                        data-article-id="{{ id }}"
                        data-title="Re-schedule Article">
                    <span class="fa fa-calendar"></span>
                    Re-Schedule
                </button>
                <button class="btn btn-default schedule" id="schedule-cancel" data-toggle="modal"
                        data-target="#schedule-modal"
                        data-article-id="{{ id }}"
                        data-title="Cancel Schedule">
                    <span class="fa fa-calendar-minus-o"></span>
                    Cancel
                </button>
            {{/if}}
            {{^if scheduled-publication-date}}
            <!--<p><strong><span
                    class="text-uppercase"></span>
            </strong></p>-->
            {{/if}}
        {{/is}}
    </td>


</tr>